{
  "name": "god-state",
  "version": "2.0.1",
  "description": "Convenient state management for React",
  "license": "MIT",
  "main": "dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "author": "Micwaits Microcood <microcood@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/microcood/god-state"
  },
  "bugs": {
    "url": "https://github.com/microcood/god-state/issues"
  },
  "scripts": {
    "build:es": "cross-env babel src --out-dir dist/es --ignore src/__tests__/*",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir dist/commonjs --ignore src/__tests__/*",
    "build:umd": "cross-env NODE_ENV=production webpack",
    "build": "npm run build:es && npm run build:commonjs && npm run build:umd",
    "lint": "eslint src",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "reactjs",
    "state",
    "context",
    "decorator"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "lodash",
      "@babel/plugin-transform-react-jsx",
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ],
    "env": {
      "commonjs": {
        "plugins": [
          "lodash",
          "@babel/plugin-transform-modules-commonjs"
        ]
      },
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/prop-types": 0
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.2",
    "cross-env": "^5.1.5",
    "dom-testing-library": "^2.3.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.8.2",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-testing-library": "^3.1.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "lodash": "^4.17.10"
  }
}
