{
  "name": "god-state",
  "version": "0.1.0",
  "description": "Convenient state management for React",
  "license": "MIT",
  "main": "dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "author": "Micwaits Microcood <microcood@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/microcood/god-state"
  },
  "bugs": {
    "url": "https://github.com/microcood/god-state/issues"
  },
  "scripts": {
    "build:es": "cross-env babel src --out-dir dist/es --ignore __tests__",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir dist/commonjs --ignore __tests__",
    "build:umd": "cross-env NODE_ENV=production webpack",
    "build": "npm run build:es && npm run build:commonjs && npm run build:umd",
    "lint": "eslint src",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "reactjs",
    "state",
    "context",
    "decorator"
  ],
  "babel": {
    "presets": [
      "es2015-no-commonjs",
      "stage-2"
    ],
    "plugins": [
      "lodash",
      "transform-react-jsx"
    ],
    "env": {
      "commonjs": {
        "plugins": [
          "lodash",
          "transform-es2015-modules-commonjs"
        ]
      },
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "canonical",
      "canonical/jest",
      "canonical/lodash",
      "canonical/react"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "no-restricted-syntax": 0,
      "react/prop-types": 0,
      "react/no-set-state": 0
    }
  },
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015-no-commonjs": "^0.0.2",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.1.5",
    "dom-testing-library": "^2.3.2",
    "eslint": "^4.19.1",
    "eslint-config-canonical": "^9.3.2",
    "eslint-plugin-react": "^7.8.2",
    "jest": "^22.4.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-testing-library": "^3.1.0",
    "webpack": "^4.8.2",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "lodash": "^4.17.10"
  }
}
